<Window x:Class="mdk0202.Producti"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdk0202"
        mc:Ignorable="d"
        Title="Producti" Height="450" Width="800">
    <Grid>
        <ListBox VirtualizingPanel.ScrollUnit="Pixel" x:Name="ProductsList" SelectedValuePath="id" Margin="10,23,10,55" Background="#FFBBDCFA" FontFamily="Bahnschrift Light SemiCondensed">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black" Width="730" Height="90">
                        <Grid Width="725" Height="80">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition/>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="10,0,0,0" FontSize="16" Text="{Binding Path=title}" />
                            <TextBlock Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" FontSize="16" Text="{Binding Path=price, StringFormat='Минимальная стоимость для партнера: {0} р'}" HorizontalAlignment="Right" Margin="0,0,10,0" />
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" FontSize="12" Text="{Binding Path=amount, StringFormat='Количество: {0}'}" Margin="10,0,0,0" HorizontalAlignment="Left" />

                        </Grid>

                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="btnBack" Content="Назад" HorizontalAlignment="Left" Margin="680,400,0,0" Background="#FF0C4882" Foreground="White" VerticalAlignment="Top" Height="24" Width="110" FontFamily="Bahnschrift Light SemiCondensed" Click="btnBack_Click"/>
    </Grid>
</Window>
